    <main class=" w-full py-5 ">

      
      
       


        <section class="">

            <div>
            <span class=" text-sm text-blue-900">POLO RALPH</span>
            <h1 class=" text-4xl py-5 font-semibold ">Custom Fit Polo Bear Oxford Shirt</h1>
            <p class=" text-gray-600">Blue Polo with a classic cut. Made of smooth and soft cotton.</p>
            </div>

            <div class=" py-10">
            <div class=" flex items-center pb-2">
                <p class="text-4xl pr-3 font-semibold">$99.00</p>
                <p class=" bg-blue-300 text-blue-900  rounded-lg">-25%</p>
            </div>
            <span class=" text-gray-600 line-through font-light">$132.00</span>
        </div>

        <div>
            <Gallerymobile />
        </div> 


            <!-- Buttons -->

            <div class=" pt-5">
                <h1 class=" pb-2 text-lg">Choose size:</h1>

                <div class=" flex space-x-3 items-center">
                    <button type="button" class="button border border-black hover:border-blue-800 hover:bg-blue-800 hover:text-white rounded-lg  ease-in-out duration-200  text-sm py-2 text-center px-4 ">S</button>

                    <button type="button" class="button border border-black hover:border-blue-800 hover:bg-blue-800 hover:text-white rounded-lg  ease-in-out duration-200  text-sm py-2 text-center px-4">M</button>

                    <button type="button" class="button border border-black hover:border-blue-800 hover:bg-blue-800 hover:text-white rounded-lg  ease-in-out duration-200  text-sm py-2 text-center px-4">L</button>

                    <button type="button" class="button border border-black hover:border-blue-800 hover:bg-blue-800 hover:text-white rounded-lg  ease-in-out duration-200  text-sm py-2 text-center px-4">XL</button>

                    <button type="button" class="button border border-black hover:border-blue-800 hover:bg-blue-800 hover:text-white rounded-lg  ease-in-out duration-200  text-sm py-2 text-center px-4">XXL</button>


                </div>

            <div>





<form class="py-5">
<label for="quantity-input" class="block pb-2 text-lg">Choose quantity:</label>
<div class="relative flex items-center max-w-[8rem]">
    <button type="button" id="decrement-button" data-input-counter-decrement="quantity-input" class="bg-blue-900 hover:bg-blue-800 ease-in-out duration-200  rounded-s-lg p-3 h-11  ">
        <svg class="w-3 h-3 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h16"/>
        </svg>
    </button>
    <input type="text" id="quantity-input" data-input-counter data-input-counter-min="1" data-input-counter-max="50" aria-describedby="helper-text-explanation" class="bg-gray-50 border-x-0 border-gray-300 h-11 text-center text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  value="1" required />
    <button type="button" id="increment-button" data-input-counter-increment="quantity-input" class=" border rounded-e-lg p-3 h-11 bg-blue-900 hover:bg-blue-800 ease-in-out duration-200">
        <svg class="w-3 h-3 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
        </svg>
    </button>
</div>

</form>


                </div>

                <button class=" mt-5 bg-blue-900 hover:bg-blue-800 ease-in-out duration-200 w-full py-3 rounded-lg text-white">ADD TO BAG</button>
                
            </div>
            
            
        </section>
        
        

    </main>

   
    
</main>

<style>
	.button.selected {
            background-color: rgb(30 58 138);
            color: white;
	};
</style>

<script>




	document.addEventListener("DOMContentLoaded", function() {
		const buttons = document.querySelectorAll('.button');

		buttons.forEach(button => {
			button.addEventListener('click', function() {
				// Eliminar la clase 'selected' 
				buttons.forEach(btn => btn.classList.remove('selected'));
				
				// Agregar la clase 'selected' 
				this.classList.add('selected');
			});
		});
	});
</script>